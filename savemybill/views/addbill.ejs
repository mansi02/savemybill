<%- include ./Partials/header %>
<%- include ./Partials/navigationalbar %>

<div class="container">
  <div class="row">
    <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">Add new Bill</div>
        </div>

        <div class="panel-body">
          <form action="/addnewbill" id="billform" class="form-horizontal" method="post" role="form"
            enctype="multipart/form-data">
            <% if(success != ''){ %><p style="text-align: center;color: green;"><%= success %></p> <% } %>
            <div class="form-group">
              <label for="username" class="col-md-3 control-label">Category</label>
              <div class="col-md-9">
                <select class="form-control" name="Category">
                  <option value="">Choose a Category</option>
                  <% if(record.length >0) { 
                    record.forEach(function(row){
                    %>
                  <option value="<%= row.CategoryName %>"><%= row.CategoryName %></option>
                  <% }) } %>
                </select>
              </div>
            </div>
        </div>

        <div class="form-group">
          <label for="username" class="col-md-3 control-label text-align: center">Bill details</label>
          <div class="col-md-9">
            <textarea class="form-control" id="billd" name="details"
              placeholder="Enter the details like date, paid, balance if any"></textarea>
          </div>
        </div>

        <div class="form-group">
          <label for="username" class="col-md-3 control-label text-align: center">Bill Image (if any)</label>
          <div class="col-md-9">
            <input type="file" class="form-control" name="file">
          </div>
        </div>

        <div class="form-group">
          <div class="col-md-offset-3 col-md-9">
            <input type="submit" name="Add" value="Add Bill" class="btn btn-primary">
          </div>
        </div>
        <p> <a href="/allbills">  View all my Bills </a></p>
        </table>
        </form>
      </div>
    </div>
  </div>
</div>
<%- include ./Partials/footer %>