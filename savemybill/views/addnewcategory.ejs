<%- include ./partials/header %>
<%- include ./partials/navigationalbar %>
<div class="container">
    <div class="row">
        <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Add new category</div>
                </div>

                <div class="panel-body">
                    <form action="/addnewcategory" id="Categoryform" class="form-horizontal" method="post" role="form">
                        <% if(errors != ''){ %><p style="text-align: center;color: red;"><%= errors.category.msg %></p>
                        <% } %>
                        <% if(success != ''){ %><p style="text-align: center;color: green;"><%= success %></p> <% } %>

                        <table class="table table-striped table-primary">
                            <div class="form-group">
                                <label for="categoryname" class="col-md-3 control-label">Category name</label>
                                <div class="col-md-9">
                                    <input type="text" class="form-control" name="category"
                                        placeholder="Enter the Category">
                                </div>
                            </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <input type="submit" name="signup" value="Add Category" class="btn btn-primary">
                    </div>
                </div>
                <p> <a href="/allcategories"> view all list</a></p>
                </table>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include ./partials/footer %>