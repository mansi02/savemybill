<%- include ./Partials/header %>
<div class="container">
  <div class="row">
    <div id="loginbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
      <div class="panel panel-info">
        <div class="panel-heading">
          <div class="panel-title">Login Here!</div>
        </div>

        <div class="panel-body">
          <form action="/" id="Loginform" class="form-horizontal" method="post" role="form">
            <% if (msg !='') { %>
            <div id="signupalert" class="alert alert-danger">
              <p><%= msg %></p>
            </div>
            <% } %>
            <table class="table table-striped table-primary">
              <div class="form-group">
                <label for="username" class="col-md-3 control-label">Username</label>
                <div class="col-md-9">
                  <input type="text" class="form-control" name="uname" placeholder="Enter your name">
                </div>
              </div>

              <div class="form-group">
                <label for="password" class="col-md-3 control-label">Password</label>
                <div class="col-md-9">
                  <input type="password" class="form-control" name="password" placeholder="Enter password">
                </div>
              </div>

              <div class="form-group">
                <!--Button-->
                <div class="col-md-offset-3 col-md-9">
                  <input type="submit" name="login" value="Login" class="btn btn-primary">
                </div>
              </div>
              <p>Create a account here <a href="/signup">New Account</a></p>
            </table>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include ./Partials/footer %>